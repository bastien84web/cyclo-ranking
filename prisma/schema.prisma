generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  password      String
  emailVerified DateTime?
  verificationToken String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  votes Vote[]
  races Race[]

  @@map("users")
}

model Race {
  id          String   @id @default(cuid())
  name        String
  description String?
  location    String
  date        DateTime
  distance    String?
  website     String?
  logoUrl     String?  // URL ou chemin vers le logo de la cyclosportive
  imageUrl    String?  // URL ou chemin vers une image/photo de la cyclosportive
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  createdBy   String
  
  creator User @relation(fields: [createdBy], references: [id])
  votes   Vote[]

  @@map("races")
}

model Vote {
  id     String @id @default(cuid())
  userId String
  raceId String

  // Logistique
  accommodationAvailability Int // 1-5
  parkingAvailability       Int // 1-5
  startFinishDistance       Int // 1-5

  // Ravitaillement et repas
  foodQuality      Int // 1-5
  foodQuantity     Int // 1-5
  foodConviviality Int // 1-5

  // Parcours
  safety      Int // 1-5
  signage     Int // 1-5
  traffic     Int // 1-5
  scenery     Int // 1-5

  // DÃ©fis sportifs
  routeVariety Int // 1-5

  // Prix
  priceValue Int // 1-5

  // Commentaire
  comment String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
  race Race @relation(fields: [raceId], references: [id])

  @@unique([userId, raceId])
  @@map("votes")
}
